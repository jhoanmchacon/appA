<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.insumoskeij.appaksu.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/imgProd"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/txtNombreProd_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#90000000"
                    android:maxLines="1"
                    android:padding="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@android:color/white" />
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#bbbcba"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txtTipoProd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_weight=".8"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/txtCodProd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_weight=".8"
                        android:textColor="#000000"
                        android:textSize="24sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtMarca"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="20"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txtModelo"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="10"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtMotor"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="10"
                            android:textSize="20sp"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/txtAnno"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="10"
                            android:textSize="20sp"
                            android:visibility="gone"/>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/tDetalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight=".8"
                android:text="Detalles"
                android:textStyle="bold|italic"
                android:textColor="#bbbcba"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/tOMarcas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight=".8"
                android:text="REFERENCIAS DE OTRAS MARCAS"
                android:textStyle="bold|italic"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/txtDetalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight=".8"
                android:textSize="14sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tCodBarra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="CÃ“DIGO DE BARRA"
                android:layout_weight=".8"
                android:textStyle="bold|italic"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtDetallesCodBarra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight=".8"
                android:textSize="14sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tMedida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight=".8"
                android:text="MEDIDAS"
                android:textStyle="bold|italic"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtDetallesMedida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight=".8"
                android:textSize="14sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tPeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight=".8"
                android:text="PESO"
                android:textStyle="bold|italic"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/txtDetallesPeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight=".8"
                android:textSize="14sp"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>