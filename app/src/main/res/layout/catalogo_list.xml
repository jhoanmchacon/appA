<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgProd"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp">


            <TextView
                android:id="@+id/txtMarca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="txtMarca"
                android:textSize="17sp"
                android:textColor="#000000"
                android:layout_weight=".8"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/txtModelo"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:text="nombreVeh "
                android:textSize="14sp"
                android:layout_weight="40"/>

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:id="@+id/txtAnno"
                android:textSize="14sp"
                android:layout_weight="60"
                android:textAlignment="gravity"/>


            </LinearLayout>
            <TextView
                android:id="@+id/txtTipoProd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tipoProd"
                android:textSize="14sp"
                android:layout_weight=".8"/>

            <TextView
                android:id="@+id/txtFiltro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nombreFiltro"
                android:textSize="14sp"
                android:layout_weight=".8"/>



        </LinearLayout>
    </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f86716"/>

</LinearLayout>