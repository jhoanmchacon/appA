<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="-15dp"
    android:layout_marginRight="-15dp"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textAlignment="center">


                <ImageView
                    android:id="@+id/imgProd"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#bbbcba"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txtTipoProd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_weight=".8"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/txtCodProd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_weight=".8"
                        android:textColor="#000000"
                        android:textSize="24sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtMarca"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="20"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txtModelo"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="10"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtMotor"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="10"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txtAnno"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_weight="10"
                            android:textSize="20sp" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/tDetalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight=".8"
                android:text="Detalles"
                android:textStyle="bold|italic"
                android:textColor="@color/colorPrimary"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tRMarcas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight=".8"
                android:text="REFERENCIAS DE OTRAS MARCAS"
                android:textStyle="bold|italic"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/txtDetalles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight=".8"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tCodBarra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="CÃ“DIGO DE BARRA"
                android:layout_weight=".8"
                android:textStyle="bold|italic"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/txtDetallesCodBarra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight=".8"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tMedida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight=".8"
                android:text="MEDIDAS"
                android:textStyle="bold|italic"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/txtDetallesMedida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight=".8"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tPeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight=".8"
                android:text="PESO"
                android:textStyle="bold|italic"
                android:textColor="@color/colorPrimary"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/txtDetallesPeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_weight=".8"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>